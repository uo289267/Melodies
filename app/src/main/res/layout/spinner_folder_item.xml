<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_folder_with_color_import"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/folder_color"
        android:src="@drawable/folder_pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aaaa"
        android:gravity="center_vertical|start"
        android:layout_marginTop="22dp"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/iv_folder_with_color_import"

        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>